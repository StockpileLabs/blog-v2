---
const { tags } = Astro.props;
import { capitalize } from '../utils';

interface Props {
    tags: string[];
}
---

<div class="flex flex-wrap gap-2 md:mb-6">
    {tags.map((tag:string, index:number) => (
        <span
          class={index % 2 === 0 ? "px-2 py-1 bg-spblue2 text-white rounded-full text-xs hover:opacity-90" : "px-2 py-1 bg-spblue1 text-white rounded-full text-xs hover:opacity-90"}
        >
          <a href={'/articles/tag/' + tag}>{capitalize(tag)}</a>
        </span>
      ))}
  </div>